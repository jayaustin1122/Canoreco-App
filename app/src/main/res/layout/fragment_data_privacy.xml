<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".views.signups.DataPrivacyFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_dimen"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dimen_30dp"
            android:background="@drawable/bg_topappbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:text="Data Privacy"
                android:textColor="@color/text_light_color"
                android:textSize="22sp" />

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/back_arrow"
                app:tint="@color/text_light_color" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_20dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/report_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Your Privacy is Important to us"
                android:textColor="@color/text_dark_color"
                android:textSize="22sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="To be allowed to collect and process your personal information, you need to agree to our Data Privacy Statement."
                android:textSize="15sp"
                android:textColor="#777777"
                android:fontFamily="@font/roboto_regular"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Data Privacy Statement"
                android:textColor="@color/text_dark_color"
                android:textSize="18sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="We at ValCo is committed to ensuring and promoting the protection your privacy and the confidentiality of data as defined under the Data Privacy Act of 2012 and its implementing rules and regulations. This Data Privacy Statement outlines how we collect, use, store, and protect your personal data. By using the App, you agree to the terms of this statement."
                android:textSize="15sp"
                android:textColor="#777777"
                android:fontFamily="@font/roboto_regular"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Purpose for Collection and Processing of Personal Data"
                android:textColor="@color/text_dark_color"
                android:textSize="18sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="We collect and process your personal data to provide you essential services, such as:"
                android:textSize="15sp"
                android:textColor="#777777"
                android:fontFamily="@font/roboto_regular"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Method by Which We Collect Your Data"
                android:textColor="@color/text_dark_color"
                android:textSize="18sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="We collect this data either through direct submission when you register, submit inquiries, or update your information within the App. We may also receive data from third-party service providers, such as payment processors, to facilitate our services."
                android:textSize="15sp"
                android:textColor="#777777"
                android:fontFamily="@font/roboto_regular"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Security of your Personal Data"
                android:textColor="@color/text_dark_color"
                android:textSize="18sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="We are committed to ensuring the security of your personal data. We use industry-standard security measures such as encryption to protect sensitive information like billing details. Access to your personal data is limited to authorized personnel who are bound by confidentiality agreements, and we regularly review our security practices to protect against unauthorized access or data breaches."
                android:textSize="15sp"
                android:textColor="#777777"
                android:fontFamily="@font/roboto_regular"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="CANORECO reserves the right to modify this Data Privacy Statement. Significant changes will be communicated through the App or via notifications. If you have any questions or concerns regarding this Data Privacy Statement, or if you would like to make a request concerning your personal data, please contact us at [support email], by phone at [support phone number], or visit us at [CANORECO office address]."
                android:textSize="15sp"
                android:textColor="#777777"
                android:fontFamily="@font/roboto_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <CheckBox
                    android:id="@+id/checkBoxAllowData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I allow the collection and processing of my personal data."
                    android:buttonTint="@color/primary_main_color"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_main_color"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Continue"
                    android:textColor="@color/primary_light_color"
                    app:cornerRadius="10dp"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>