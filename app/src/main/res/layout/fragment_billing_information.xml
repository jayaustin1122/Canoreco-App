<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv"/>
    <!-- Outstanding Balance Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/g_gray100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outstanding Balance"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚± 937.00"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due March 16, 2024"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- RecyclerView for Billing History -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBillingHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_payments"
        android:layout_weight="1"/>

    <!-- Pay Bill Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPayBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Bill"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

</LinearLayout>
