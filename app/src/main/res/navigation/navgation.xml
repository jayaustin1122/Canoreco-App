    <fragment
        android:id="@+id/viewMapsWithAreasFragment"
        android:name="com.example.canorecoapp.views.user.news.ViewMapsWithAreasFragment"
        android:label="fragment_view_maps_with_areas"
        tools:layout="@layout/fragment_view_maps_with_areas" />
    <fragment
        android:id="@+id/accountUserFragment"
        android:name="com.example.canorecoapp.views.user.account.AccountUserFragment"
        android:label="fragment_account_user"
        tools:layout="@layout/fragment_account_user" />
