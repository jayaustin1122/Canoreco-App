        android:id="@+id/maintenanceListFragment"
        android:name="com.example.canorecoapp.views.user.maintenance.MaintenanceListFragment"
        android:label="fragment_maintenance_list"
        tools:layout="@layout/fragment_maintenance_list" />
    <fragment
        android:id="@+id/servicesUserFragment"
        android:name="com.example.canorecoapp.views.user.service.ServicesUserFragment"
        android:label="fragment_services_user"
        tools:layout="@layout/fragment_services_user" />
    <fragment
        android:id="@+id/onBoardingMainFragment"
        android:name="com.example.canorecoapp.views.onboardingscreens.OnBoardingMainFragment"
        android:label="fragment_on_boarding_main"
