        android:id="@+id/billingInformationFragment"
        android:name="com.example.canorecoapp.views.user.billing.BillingInformationFragment"
        tools:layout="@layout/fragment_billing_information"
        android:label="BillingInformationFragment" >
        <action
            android:id="@+id/action_billingInformationFragment_to_outagesFragment"
            app:destination="@id/outagesFragment" />
