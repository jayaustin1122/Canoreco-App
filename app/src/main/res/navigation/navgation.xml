    <fragment
        android:id="@+id/listOfMyComplaintsFragment"
        android:name="com.example.canorecoapp.views.user.complaints.ListOfMyComplaintsFragment"
        android:label="ListOfMyComplaintsFragment" />

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.canorecoapp.views.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" />
    <fragment
        android:id="@+id/notifFragment"
        android:name="com.example.canorecoapp.views.user.notif.NotifFragment"
        android:label="fragment_notif"
        tools:layout="@layout/fragment_notif" />
</navigation>